{
  "compilerOptions": {
    "module": "ESNext",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "removeComments": true,
    "noLib": false,
    "useUnknownInCatchVariables": false,
    "target": "es2017",
    "sourceMap": true,
    "allowJs": false,
    "outDir": "dist",
    "baseUrl": "./src",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "typeRoots" : ["./src/types", "./node_modules/@types", "firebase-admin"],
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "rootDir": "./",
  "exclude": ["node_modules", "**/*.spec.ts"],
  "include": ["src"]
}
